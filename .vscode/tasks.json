{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "install",
            "type": "shell",
            "command": ".\\mvnw install",
            "group": "build"
        },
        {
            "taskName": "mvn:clean",
            "type": "shell",
            "command": "mvn clean package",
            "group": "build"
        },
        {
            "taskName": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "taskName": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },        
        {
            "taskName": "boot:run",
            "type": "shell",
            "command": "mvn spring-boot:run -Dserver.port=9000",
            "group": "none"
        },
        {
            "taskName": "docker:package",
            "type": "shell",
            "command": "mvn clean package docker:build",
            "group": "none"
        },
        {
            "taskName": "docker:image:push",
            "type": "shell",
            "command": "mvn package docker:build -DpushImage",
            "group": "none"
        },
        {
            "taskName": "docker:image:run",
            "type": "shell",
            "command": "docker -e \"SPRING_PROFILES_ACTIVE=dev\" run -p 8080:8080 -t jitemizer/jitemizer",
            "group": "none"
        }        
    ]
}